{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ES2022",
        "moduleResolution": "Node",
        "target": "ES2017",
        "esModuleInterop": true,
        "skipLibCheck": true,

        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "noEmit": false,
        "outDir": "./build"
    },
    "include": ["src"]
}
